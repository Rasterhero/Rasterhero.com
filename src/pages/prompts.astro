---
import BaseLayout from '../layouts/BaseLayout.astro'
import PromptPost from '../components/PromptPost.astro'
const allPosts = await Astro.glob('../pages/prompts/*.md');
const pageTitle = "My Astro Learning Prompt";
---
<BaseLayout pageTitle={pageTitle}>
  <h2 class="text-2xl mb-8">All our prompts belong to us.</h2>
  <ul class="flex flex-1 gap-8">
    {allPosts.map((post) =>  <PromptPost url={post.url} title={post.frontmatter.title} description={post.frontmatter.description} />)}
  </ul>
</BaseLayout>